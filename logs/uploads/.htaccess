# Denegar acceso a los archivos de log
<FilesMatch "\.log$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>

# Prevenir listado de directorio
Options -Indexes

# Configuraci√≥n adicional de seguridad
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
</IfModule>
